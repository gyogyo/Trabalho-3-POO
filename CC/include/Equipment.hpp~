#ifndef EQUIPMENT_H_
#define EQUIPMENT_H_

#include <Item.hpp>
#include <string>
using namespace std;

class Weapon : public Item {
	private:
	string name;
	double price;
	int attack;
	int range;
	Character* owner;
//Metodos
	public:
	Weapon(string,double,int,int,ItemBridge*);
	Weapon(Weapon&);
	void setOwner(Character*);
	string getName();
	double getPrice();
	int getPoints();
	Character* getOwner();
	void use();
};

class StandartWeapon : public ItemBridge {
//Metodos
	public:
	void use();
};

class Armor : public Item {
	private:
	string name;
	double price;
	int defense;
	int weight;
	Character* owner;
//Metodos
	public:
	Armor(string,double,int,int,ItemBridge*);
	Armor(Weapon&);
	void setOwner(Character*);
	string getName();
	double getPrice();
	int getPoints();
	Character* getOwner();
	void use();
};

class StandartArmor : public ItemBridge {
//Metodos
	public:
	void use();
};

class Potion : public Item {
	private:
	string name;
	double price;
	int points;
	Character* owner;
//Metodos
	public:
	Potion(string,double,int,int,ItemBridge*);
	Potion(Weapon&);
	void setOwner(Character*);
	string getName();
	double getPrice();
	int getPoints();
	Character* getOwner();
	void use();
};

class HealthPotion : public ItemBridge {
//Metodos
	public:
	void use();
};

class Manapotion : public ItemBridge {
//Metodos
	public:
	void use();
};


#endif
